{
    "manifest_version": 2,

    "name": "Applitools Eyes",
    "short_name": "Eyes",
    "description": "Applitools Eyes browser extension allows you to run visual tests directly from the browser. No coding required.",
    "version": "1.0",

    "icons": {
        "48": "images/icon_applitools_48.png",
        "128": "images/icon_applitools_128.png"
    },

    "permissions": [
        "tabs",
        "cookies",
        "storage",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": {
            "19": "images/icon_applitools_19.png",
            "38": "images/icon_applitools_38.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["compiled/bf-background.js"]
    },

    "options_page": "options.html"
}